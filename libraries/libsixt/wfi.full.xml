<?xml version="1.0"?>
<instrument>
<telescope>
<focallength value="20.0"/>
<fov diameter="1.0"/>
<psf filename="/home/schmid/ixo/wfi/wfi.psf.25.fits"/>
<vignetting filename="/home/schmid/ixo/ixo.vignetting.fits"/>
</telescope>

<detector type="wfi" mode="fullframe">
<dimensions xwidth="1024" ywidth="1024"/>
<wcs xrpix="512.5" yrpix="512.5" xrval="0." yrval="0." xdelt="100.e-6" ydelt="100.e-6"/>
<response filename="/home/schmid/ixo/wfi/response/ixo_cdf_wfi_default.rsp"/>
<split type="GAUSS" par1="11.e-6"/>
<eventfile template="geneventfile.tpl"/>

<threshold_readout_lo_keV value="150.e-3"/>
<threshold_event_lo_keV value="150.e-3"/>
<threshold_split_lo_keV value="150.e-3"/>
<readout mode="time">
  <loop start="511" end="0" increment="-1" variable="$i">
	<wait time="2.e-6"/>
	<readoutline lineindex="$i" readoutindex="$i"/>
	<readoutline lineindex="1023-$i" readoutindex="1023-$i"/>
  </loop>
</readout>
</detector>
</instrument>
