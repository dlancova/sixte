</telescope>

<detector type="wfi" mode="fullframe">
<dimensions xwidth="640" ywidth="640"/>
<wcs xrpix="320.5" yrpix="320.5" xrval="0." yrval="0." xdelt="130.e-6" ydelt="130.e-6"/>
