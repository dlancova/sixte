<?xml version="1.0"?>
<!-- LOFT LAD version 1.12 -->
<instrument type="LOFT LAD">
  <telescope>
    <fov diameter="1.5"/>
    <vignetting filename="lad.vignetting.fits"/>
  </telescope>

  <detector type="SDD">
    <delay time="0." rms="0."/>
    <cte value="1."/>
    <loop variable="$ii" start="0" end="5" increment="1">
      <panel id="$ii" nx="3" ny="7">
        <rotation value="$ii*60"/>
        <orientation xval="0." yval="0." zval="0."/>
        <position xrpix="0.5" yrpix="0.5" xrval="3.367*sin($ii*pi/3)"
         yrval="-3.367*(1-cos($ii*pi/3))"/>
        <loop variable="$jj" start="0" end="6" increment="1">
          <loop variable="$kk" start="0" end="2" increment="1">
            <module id="$jj*3+$kk" nx="4" ny="4">
              <loop variable="$ll" start="0" end="3" increment="1">
                <loop variable="$mm" start="0" end="3" increment="1">
                  <element id="$ll*4+$mm" xdim="0.0725" ydim="0.12084" nanodes="224" xborder="0.00125" yborder="0.00615">
                  </element>
                </loop>
              </loop>
            </module>
          </loop>
        </loop>
      </panel>
    </loop>

  <arf filename="LAD_Requirements_v5.1.arf"/>
  <rmf filename="LAD_Requirements_v5.1.rmf"/>
  <background filename="lad_background_v6.simput"/>
  <temperature value="300"/>
  <efield value="3.6e+4"/>
  <mobility value="3.e-2"/>
  <asic deadtime="41.e-6" edeadtime="0.0" coincidencetime="150.e-9" channels="112"/>
  <!-- The lower readout threshold is on purpose set to
       zero. Otherwise charge would be lost in split events, which,
       however, is already taken into account in the implemented
       RMF. -->
  <threshold readout_lo_keV="0.0" readout_up_keV="80."/>

  <readout mode="event">
    <time_width value="1.e-5"/>
    <reconstruction type="campana"/>
  </readout>

  </detector>
</instrument>
