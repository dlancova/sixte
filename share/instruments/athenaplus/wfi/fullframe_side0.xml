<?xml version="1.0"?>
<instrument telescop="AthenaPlus" instrume="WFI">
<telescope>
<arf filename="athenapp_ir_b4c_wfi_withfilter_onaxis.arf"/>
<focallength value="12.0"/>
<fov diameter="1.0"/>
<psf filename="../psf_athenapp_vig_w1_3_12.fits"/>
<vignetting filename="../vignetting_athenapp_vig_4_12.fits"/>
</telescope>

<detector>
<dimensions xwidth="640" ywidth="448"/>
<wcs xrpix="0.5" yrpix="0.5" xrval="-0.0128." yrval="0.0130" xdelt="130.e-6" ydelt="130.e-6"/>
<rmf filename="athenapp_ir_b4c_wfi_withfilter_onaxis.rmf"/>
<phabackground filename="sixte_WFI_bkgd_sum_fov40amin.pha"/>
<split type="GAUSS" par1="11.e-6"/>

<threshold_readout_lo_keV value="100.e-3"/>
<threshold_event_lo_keV value="100.e-3"/>
<threshold_split_lo_keV value="100.e-3"/>
<readout mode="time">
  <loop start="223" end="1" increment="-2" variable="$i">
    <wait time="8.e-6"/>
    <readoutline lineindex="$i" readoutindex="$i"/>
    <readoutline lineindex="$i-1" readoutindex="$i-1"/>
    <readoutline lineindex="447-$i" readoutindex="447-$i"/>
    <readoutline lineindex="448-$i" readoutindex="448-$i"/>
  </loop>
  <newframe/>
</readout>
</detector>
</instrument>
