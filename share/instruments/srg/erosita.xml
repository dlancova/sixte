<?xml version="1.0"?>
<!-- SRG eROSITA version 1.3 -->
<instrument telescop="eROSITA" instrume="FM4">

<telescope>
  <arf filename="erosita_iv_1telonaxis_ff.arf"/>
  <fov diameter="1.02"/>
  <focallength value="1.6"/>
  <vignetting filename="erosita_vignetting_v2.1.fits"/>
  <psf filename="erosita_psf_v2.1.fits"/>
</telescope>

<detector>
  <dimensions xwidth="384" ywidth="384"/>
  <pixelborder x="0." y="0."/>
  <wcs xrpix="192.5" yrpix="192.5" xrval="0." yrval="0." 
       xdelt="75.e-6" ydelt="75.e-6" rota="0"/>
  <rmf filename="erosita_iv_1telonaxis_ff.rmf"/>
  <cte value="1"/>
  <split type="exponential" par1="0.355"/>
  <erobackground filename="merged_hitlist.fits"/>
  <threshold_readout_lo_keV value="0."/>
  <threshold_event_lo_keV value="150.e-3"/>
  <threshold_split_lo_fraction value="0.01"/>
  <threshold_pattern_up_keV value="15."/>
  
  <readout mode="time">
    <wait time="0.05"/>
	
    <loop start="0" end="383" increment="1" variable="$i">
      <readoutline lineindex="0" readoutindex="$i"/>
      <lineshift/>
      <wait time="0.3e-6"/>
    </loop>

    <newframe/>
  </readout>
</detector>

</instrument>
