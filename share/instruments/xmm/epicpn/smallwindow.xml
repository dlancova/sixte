<?xml version="1.0"?>
<instrument>

<telescope>
<focallength value="7.5"/>
<fov diameter="1.0"/>
<psf filename="pn_psf.fits"/>
</telescope>

<detector type="EPIC-pn">
<dimensions xwidth="64" ywidth="200"/>
<wcs xrpix="32.5" yrpix="168.5" xrval="0." yrval="0." xdelt="150.e-6" ydelt="150.e-6"/>
<cte value="1"/>
<rmf filename="pn-med-10.rmf"/>
<arf filename="pn-med-10.arf"/>
<split type="gauss" par1="9.8e-6" par2="-0.5e-6"/>
<threshold_readout_lo_keV value="0.100"/>
<threshold_event_lo_keV value="0.100"/>
<threshold_pattern_up_keV value="20."/>

<readout mode="time">
  <wait time="3.97e-3"/>

  <loop start="0" end="135" increment="1" variable="$i">
    <clearline lineindex="0"/>
    <lineshift/>
    <wait time="0.72e-6"/>
  </loop>
  <loop start="136" end="199" increment="1" variable="$i">
    <readoutline lineindex="0" readoutindex="$i"/>
    <lineshift/>
    <wait time="23.04e-6"/>
  </loop>
  <wait time="23.04e-6"/>
  <wait time="23.04e-6"/>
  <loop start="0" end="63" increment="1" variable="$i">
    <clearline lineindex="0"/>
    <lineshift/>
    <wait time="0.72e-6"/>
  </loop>

  <newframe/>
</readout>

</detector>
</instrument>
