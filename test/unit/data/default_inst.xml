<?xml version="1.0"?>
<instrument telescop="test" instrume="test">

<telescope>
  <fov diameter="1.0"/>
  <focallength value="1.0"/>
</telescope>

<detector>
  <dimensions xwidth="5" ywidth="5"/>
  <pixelborder x="0." y="0."/>
  <wcs xrpix="3.0" yrpix="3.0" xrval="0." yrval="0." 
       xdelt="100.e-6" ydelt="100.e-6" rota="0"/>
  
  <readout mode="time">
    <wait time="0.05"/>
	
    <loop start="0" end="4" increment="1" variable="$i">
      <readoutline lineindex="0" readoutindex="$i"/>
      <lineshift/>
      <wait time="1.0e-6"/>
    </loop>

    <newframe/>
  </readout>
</detector>

</instrument>
